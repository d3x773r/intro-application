<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gurpster.introapplication.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Text"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#85000000">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/swipe_gesture_right"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center|left"
            android:visibility="gone"
            app:srcCompat="@drawable/ic_finger_right_arrow"/>

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/swipe_gesture_left"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:visibility="gone"
            android:layout_gravity="center|right"
            app:srcCompat="@drawable/ic_finger_left_arrow"/>

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/swipe_gesture_up"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:visibility="gone"
            android:layout_gravity="center|top"
            app:srcCompat="@mipmap/ic_launcher"/>

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/swipe_gesture_down"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:visibility="gone"
            app:srcCompat="@mipmap/ic_launcher"/>

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/swipe_gesture_click"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:visibility="gone"

            app:srcCompat="@mipmap/ic_launcher"/>

    </FrameLayout>

</android.support.constraint.ConstraintLayout>
